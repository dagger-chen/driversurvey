<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <EditText
        style="@style/edittext_normal"
        android:inputType="number"
        android:id="@+id/editText_car_id"
        android:hint="@string/input_car_id" />

    <EditText
        style="@style/edittext_normal"
        android:id="@+id/editText_driver_name"
        android:layout_marginTop="10dp"
        android:hint="@string/input_driver_name" />

    <Button
        android:id="@+id/button_start_survey"
        style="@style/button_normal"
        android:text="@string/start_survey" />

</LinearLayout>